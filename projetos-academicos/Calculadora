def calculadora():
    print("1. Soma\n2. Subtração")
    opcao = input("Escolha uma operação: ")
    num1 = float(input("Digite o primeiro número: "))
    num2 = float(input("Digite o segundo número: "))
    
    if opcao == "1":
        print(f"Resultado: {num1 + num2}")
    elif opcao == "2":
        print(f"Resultado: {num1 - num2}")
    else:
        print("Opção inválida!")

calculadora()
